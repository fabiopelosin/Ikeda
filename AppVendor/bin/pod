#!/bin/sh

# This file was generated by the CocoaPodsApp.
#
# The application 'pod' is installed as part of a self contained gem, and this
# file is here to facilitate running it.

WORKING_DIR=`pwd -P`

# Iterate to find the location physical of this script so we can load ruby from
# a relative path
TARGET_FILE=$0
cd `dirname $TARGET_FILE`
TARGET_FILE=`basename $TARGET_FILE`

# Iterate down a (possible) chain of symlinks
while [ -L "$TARGET_FILE" ]
do
    TARGET_FILE=`readlink $TARGET_FILE`
    cd `dirname $TARGET_FILE`
    TARGET_FILE=`basename $TARGET_FILE`
done

PHYS_DIR=`pwd -P`


# Restore original path
cd $WORKING_DIR

exec "$PHYS_DIR/ruby" "$PHYS_DIR/../Frameworks/gems/gems/cocoapods-0.14.0.rc2/bin/pod" $@
